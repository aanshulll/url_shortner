<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>URL Shortener</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #eef2f6;
            min-height: 100vh;
            color: #222;
        }

        .container {
            max-width: 600px;
            margin-top: 40px;
            background: #fff;
            border-radius: 14px;
            padding: 32px 20px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.08);
        }

        .short-url {
            font-size: 1rem;
            color: #2563eb;
            margin-bottom: 20px;
            word-break: break-all;
        }

        .btn-success {
            background: #2563eb;
            border: none;
        }

        .btn-success:hover {
            background: #1d4ed8;
        }

        table {
            font-size: 0.95rem;
            background: #f8fafc;
        }

        th,
        td {
            vertical-align: middle !important;
            border-color: #e2e8f0 !important;
        }

        th {
            background: #e0e7ef !important;
            color: #2563eb !important;
        }

        .badge.bg-secondary {
            background: #64748b !important;
        }

        a {
            color: #2563eb;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
            color: #1d4ed8;
        }

        @media (max-width: 600px) {
            .container {
                padding: 16px 4px;
            }

            table,
            th,
            td {
                font-size: 0.8rem !important;
            }

            th,
            td {
                padding: 0.3rem !important;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="mb-4 text-center" style="color:#2563eb;">URL Shortener</h1>
        <% if (id) { %>
        <div class="alert alert-success short-url text-center" style="background:#e0e7ef; color:#2563eb;">
            Your Short URL: <a href="https://url-shortner-96bw.onrender.com/url/<%= id %>" class="fw-bold" target="_blank">https://url-shortner-96bw.onrender.com/url/<%= id %></a>
        </div>
        <% } %>
        <form action="/url" method="post" class="mb-4">
            <div class="mb-3">
                <label for="url" class="form-label" style="color:#2563eb;">Enter URL</label>
                <input type="text" name="url" id="url" class="form-control" placeholder="https://example.com" required>
            </div>
            <button type="submit" class="btn btn-success w-100">Shorten</button>
        </form>
        <% if (locals.URLs && URLs.length > 0) { %>
        <h5 class="mt-4 mb-3" style="color:#2563eb;">All Shortened URLs</h5>
        <div class="table-responsive" style="overflow-x: unset;">
            <table class="table table-bordered align-middle" style="table-layout: fixed; width: 100%;">
                <thead class="table-light">
                    <tr>
                        <th style="width: 7%;">No.</th>
                        <th style="width: 33%;">Original URL</th>
                        <th style="width: 20%;">Short ID</th>
                        <th style="width: 10%;">Clicks</th>
                        <th style="width: 30%;">Visits</th>
                    </tr>
                </thead>
                <tbody>
                    <% URLs.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td style="word-break: break-all;">
                            <a href="<%= url.redirectUrl %>" target="_blank"><%= url.redirectUrl %></a>
                        </td>
                        <td style="word-break: break-all;">
                            <a href="/url/<%= url.shortid %>" target="_blank"><%= url.shortid %></a>
                        </td>
                        <td><%= url.visits.length %></td>
                        <td>
                            <% url.visits.forEach(v => { %>
                            <span class="badge bg-secondary mb-1" style="font-size: 0.8em;"><%= new Date(v.timestamp).toLocaleString() %></span>
                            <% }) %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <p class="text-center mt-4" style="color:#64748b;">No URLs shortened yet.</p>
        <% } %>
    </div>
</body>

</html>